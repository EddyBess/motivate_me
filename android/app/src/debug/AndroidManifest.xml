<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet access for network requests -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Microphone permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Fine location permission for tracking user location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Background location permission for tracking user runs even when the app is not in the foreground -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Coarse location permission for approximate location access -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permission to read from external storage (for accessing saved recordings or documents) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permission to write to external storage (for saving recordings or other data) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Motion activity recognition for tracking motion -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <!-- Bluetooth permissions for handling bluetooth-related features (if required, e.g., accessories or headsets) -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
</manifest>
